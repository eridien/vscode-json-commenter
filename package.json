{
  "name": "vscode-json-commenter",
  "displayName": "Vscode JSON commenter",
  "description": "Add inline comments to JSON keeping valid syntax.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eridien/vscode-json-commenter"
  },
  "publisher": "eridien",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-json-commenter.toggle",
        "title": "Toggle Comment Edit Mode"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-json-commenter.toggle",
        "key": "ctrl+alt+'",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint . --ext .ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.46",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "json-asty": "^1.2.2"
  }
}
